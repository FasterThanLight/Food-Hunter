<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.muhamadaizuddin.foodhunter.MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="#00ffffff"
        android:paddingEnd="0dp"
        android:baselineAligned="false"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="31dp"
            android:id="@+id/imageView"
            android:soundEffectsEnabled="true"
            android:src="@android:drawable/ic_menu_mylocation"
            android:layout_gravity="center_vertical"
            android:paddingEnd="0dp"
            android:paddingStart="0dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ikan Bakar"
            android:id="@+id/textView"
            android:layout_weight="0.90"
            android:textColor="#000000"
            android:textSize="27sp"
            android:password="false"
            android:phoneNumber="false"
            android:paddingEnd="5dp"
            android:paddingStart="10dp"
            android:background="#bdbdbd"
            android:textAlignment="center" />

        <ImageButton
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:id="@+id/imageButton"
            android:layout_weight="0.09"
            android:src="@android:drawable/ic_menu_search"
            android:background="#00ffffff" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageButton
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:id="@+id/imageButton2"
                android:src="@drawable/ib"
                android:scaleType="fitXY"
                android:background="#ffffff"
                android:padding="10dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Restoran Ikan Bakar"
                    android:id="@+id/textView3"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="5.00 p.m-12.00 p.m"
                    android:id="@+id/textView4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="016-2536478"
                    android:id="@+id/textView5" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageButton
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:id="@+id/imageButton3"
                android:src="@drawable/parameswara"
                android:scaleType="fitXY"
                android:background="#ffffff"
                android:padding="10dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Ikan Bakar Parameswara"
                    android:id="@+id/textView6"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="6.00 p.m-12.00 p.m"
                    android:id="@+id/textView7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="017-4345432"
                    android:id="@+id/textView8" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageButton
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:id="@+id/imageButton4"
                android:src="@drawable/special"
                android:scaleType="fitXY"
                android:background="#ffffff"
                android:padding="10dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Nurul Ikan Bakar Special"
                    android:id="@+id/textView9"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="8.00 p.m-12.00 p.m"
                    android:id="@+id/textView10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="012-5546789"
                    android:id="@+id/textView11" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageButton
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:id="@+id/imageButton5"
                android:src="@drawable/buloh"
                android:scaleType="fitXY"
                android:background="#ffffff"
                android:padding="10dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Medan Ikan Bakar Kedai Buloh "
                    android:id="@+id/textView12"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="4.00 p.m-12.00 p.m"
                    android:id="@+id/textView13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="017-2323415"
                    android:id="@+id/textView14" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageButton
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:id="@+id/imageButton6"
                android:src="@drawable/zul"
                android:scaleType="fitXY"
                android:background="#ffffff"
                android:padding="10dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Zul Ikan Bakar"
                    android:id="@+id/textView15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="8.00 p.m-2.00 a.m"
                    android:id="@+id/textView16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="016-8789656"
                    android:id="@+id/textView17" />

            </LinearLayout>

        </LinearLayout>

    </TableLayout>
</RelativeLayout>
